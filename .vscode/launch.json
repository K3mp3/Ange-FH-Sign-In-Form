  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Server",
      "command": "npm run devStart",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/Server",
      "env": {
        "MONGODB_URI": "mongodb://0.0.0.0:27017"
      }
    },
    {
      "name": "Run Client",
      "command": "npm run dev",
      "request": "launch",
      "type": "node-terminal",
      "preLaunchTask": "",
      "cwd": "${workspaceFolder}/Client"
    }
  ],
  "compounds": [
    {
      "name": "Start all local ðŸš€",
      "configurations": ["Run Client", "Run Server"],
      "preLaunchTask": "Stack Up",
      "postDebugTask": "Stack Down",
      "stopAll": true
    }
  ]
}
